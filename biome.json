{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "include": ["cypress/**/*.*"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "formatWithErrors": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "bracketSameLine": true,
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded",
      "lineWidth": 150,
      "indentStyle": "space"
    }
  },
  "json": {
    "formatter": {
      "lineWidth": 150,
      "indentStyle": "space",
      "indentWidth": 2
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useNodejsImportProtocol": "off"
      },
      "suspicious": {
        "noDuplicateTestHooks": "off"
      },
      "correctness": {
        "noUnusedImports": "error"
      }
    }
  }
}
